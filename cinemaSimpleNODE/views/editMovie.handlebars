<h2>Edit details for {{ name }}</h2>
<form action="">
    <label for="movieName">Movie Name:</label>
    <input type="text" name="movieName" id="movieName" placeholder="{{name}}"><br>
    <label for="starring">Starring [separate stars with ',']:</label>
    <input type="text" name="starring" id="starring" placeholder="{{starring}}"><br>
    <label for="releaseDate">Release Date [YYYY-MM-DD]:</label>
    <input type="text" name="releaseDate" id="releaseDate" placeholder="{{releaseDate}}"><br>
    <label for="trailer">Movie Name:</label>
    <input type="text" name="trailer" id="trailer" placeholder="{{trailer}}"><br>
    <label for="image">Movie Name:</label>
    <input type="text" name="image" id="image" placeholder="{{image}}"><br>
    <label for="certification">Movie Name:</label>
    <input type="text" name="certification" id="certification" placeholder="{{certification}}"><br>
    <input type="submit">
</form>